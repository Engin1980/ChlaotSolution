<Window x:Class="Chlaot.FrmInit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chlaot"
        mc:Ignorable="d"
        Title="FrmInit" Height="450" Width="800">
  <DockPanel>
    <TextBox x:Name="txtConsole" DockPanel.Dock="Bottom" Height="100" TextWrapping="Wrap" />
    <DockPanel>
      <ListView x:Name="lstModules" DockPanel.Dock="left" ItemsSource="{Binding Modules}" SelectionChanged="lstModules_SelectionChanged"  >
        <ListView.ItemTemplate>
          <DataTemplate>
            <Label Content="{Binding Name}" Tag="{Binding Name}" />
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
      <DockPanel x:Name="pnlContent">

      </DockPanel>
    </DockPanel>
  </DockPanel>
</Window>
