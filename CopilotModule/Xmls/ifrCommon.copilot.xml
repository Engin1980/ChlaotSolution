<?xml version="1.0" encoding="utf-8" ?>
<copilotSet
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://tempuri.org/Schema.xsd"
  xmlns:mt="http://tempuri.org/metaData.xsd"
  xmlns:cs="http://tempuri.org/stateCheck.xsd"
  xsi:noNamespaceSchemaLocation="CopilotSchema.xsd">
  <metaInfo>
    <mt:label>Common IFS copilot callouts</mt:label>
    <mt:author>Marek Vajgl</mt:author>
    <mt:description>(none)</mt:description>
    <mt:version>1.1</mt:version>
  </metaInfo>
  <speechDefinition title="Positive rate">
    <speech type="speech" value="Positive rate" />
    <when>
      <cs:and>
        <cs:property name="height" direction="above" expression="0" />
        <cs:property name="verticalSpeed" direction="above" expression="100" />
      </cs:and>
    </when>
    <reactivateWhen>
      <cs:for seconds="10">
        <cs:property name="height" direction="below" expression="1" />
      </cs:for>
    </reactivateWhen>
  </speechDefinition>
  <speechDefinition title="Deceleration announcement (80)kts" >
    <speech type="speech" value="{speed} knots" />
    <when>
      <cs:and>
        <cs:property name="ias" direction="passingDown" expression="{speed}" />
        <cs:property name="height" direction="below" expression="5" />
        <cs:property name="acceleration" direction="below" expression="0" />
      </cs:and>
    </when>
    <reactivateWhen>
      <cs:for seconds="10">
        <cs:property name="ias" direction="above" expression="{speed}" />
      </cs:for>
    </reactivateWhen>
    <variable name="speed" defaultValue="80" info="Speed in kts" />
  </speechDefinition>
  <speechDefinition title="Deceleration announcement (60)kts">
    <speech type="speech" value="{speed} knots" />
    <when>
      <cs:and>
        <cs:property name="ias" direction="passingDown" expression="{speed}" />
        <cs:property name="height" direction="below" expression="5" />
        <cs:property name="acceleration" direction="below" expression="0" />
      </cs:and>
    </when>
    <reactivateWhen>
      <cs:for seconds="10">
        <cs:property name="ias" direction="above" expression="{speed}" />
      </cs:for>
    </reactivateWhen>
    <variable name="speed" defaultValue="60" info="Speed in kts" />
  </speechDefinition>
  <speechDefinition title="Transition Altitude">
    <speech type="speech" value="Transition altitude" />
    <when>
      <cs:and>
        <cs:property name="verticalSpeed" direction="above" expression="300" />
        <cs:property name="altitude" direction="passing" expression="{transition_altitude}" randomize="+-300" />
      </cs:and>
    </when>
    <reactivateWhen>
      <cs:for seconds="10">
        <cs:true />
      </cs:for>
    </reactivateWhen>
    <variable name="transition_altitude" defaultValue="5000" info="Transition altitude" />
  </speechDefinition>
  <speechDefinition title="Transition Level">
    <speech type="speech" value="Transition level" />
    <when>
      <cs:and>
        <cs:property name="verticalSpeed" direction="below" expression="-300" />
        <cs:property name="altitude" direction="passing" expression="{transition_level}" randomize="+-300" />
      </cs:and>
    </when>
    <reactivateWhen>
      <cs:for seconds="10">
        <cs:true />
      </cs:for>
    </reactivateWhen>
    <variable name="transition_level" defaultValue="5000" info="Transition level" />
  </speechDefinition>
  <speechDefinition title="FL100 pass">
    <speech type="speech" value="Passing ten thousand feet" />
    <when>
      <cs:and>
        <cs:property name="altitude" direction="passing" expression="10000" randomize="+-300" />
      </cs:and>
    </when>
    <reactivateWhen>
      <cs:for seconds="30">
        <cs:or>
          <cs:property name="verticalSpeed" direction="above" expression="500" />
          <cs:property name="verticalSpeed" direction="below" expression="-500" />
        </cs:or>
      </cs:for>
    </reactivateWhen>
  </speechDefinition>
  <speechDefinition title="v1">
    <speech type="speech" value="V One" />
    <when>
      <cs:and>
        <cs:property name="ias" direction="passing" expression="{v1}" />
        <cs:property name="acceleration" direction="above" expression="1" />
      </cs:and>
    </when>
    <reactivateWhen>
      <cs:property name="ias" direction="below" expression="10" />
    </reactivateWhen>
  </speechDefinition>
  <speechDefinition title="vr">
    <speech type="speech" value="V Rotate" />
    <when>
      <cs:and>
        <cs:property name="ias" direction="passing" expression="{vr}" />
        <cs:property name="acceleration" direction="above" expression="1" />
      </cs:and>
    </when>
    <reactivateWhen>
      <cs:property name="ias" direction="below" expression="10" />
    </reactivateWhen>
  </speechDefinition>
  <speechDefinition title="v2">
    <speech type="speech" value="V Two" />
    <when>
      <cs:and>
        <cs:property name="ias" direction="passing" expression="{v2}" />
        <cs:property name="acceleration" direction="above" expression="1" />
      </cs:and>
    </when>
    <reactivateWhen>
      <cs:property name="ias" direction="below" expression="10" />
    </reactivateWhen>
  </speechDefinition>
</copilotSet>