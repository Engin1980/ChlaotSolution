<?xml version="1.0" encoding="utf-8" ?>
<copilotSet
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://tempuri.org/Schema.xsd"
  xmlns:metaData="http://tempuri.org/metaData.xsd"
  xmlns:cs="http://tempuri.org/stateCheck.xsd"
  xsi:noNamespaceSchemaLocation="CopilotSchema.xsd">
  <metaInfo>
    <metaData:label>Common IFS copilot callouts</metaData:label>
    <metaData:author>Marek Vajgl</metaData:author>
    <metaData:description>(none)</metaData:description>
  </metaInfo>
  <speechDefinition title="Deceleration announcement (80)kts" reactivateIn="10">
    <speech type="speech" value="{speed} knots" />
    <when>
      <cs:property name="ias" direction="exactly" expression="{speed}" randomize="+-5" />
    </when>
    <variable name="speed" defaultValue="80" info="Speed in kts" />
  </speechDefinition>
  <speechDefinition title="Deceleration announcement (60)kts" reactivateIn="10">
    <speech type="speech" value="{speed} knots" />
    <when>
      <cs:property name="ias" direction="exactly" expression="{speed}" randomize="+-5" sensitivity="+-10%" />
    </when>
  </speechDefinition>
  <speechDefinition title="Positive rate" reactivateIn="-1">
    <speech type="speech" value="Positive rate" />
    <when>
      <cs:and>
        <cs:for seconds="3">
          <cs:property name="verticalSpeed" direction="above" expression="0" />
        </cs:for>
        <cs:property name="height" direction="above" expression="50" />
      </cs:and>
    </when>
  </speechDefinition>
  <speechDefinition title="Transition Altitude" reactivateIn="10">
    <speech type="speech" value="Transition altitude" />
    <when>
      <cs:and>
        <cs:property name="verticalSpeed" direction="above" expression="300" />
        <cs:property name="altitude" direction="passing" expression="{transition_altitude}" randomize="+-3" />
      </cs:and>
    </when>
  </speechDefinition>
  <speechDefinition title="Transition Level" reactivateIn="10">
    <speech type="speech" value="Transition level" />
    <when>
      <cs:and>
        <cs:property name="verticalSpeed" direction="below" expression="-300" />
        <cs:property name="altitude" direction="passing" expression="{transition_level}" randomize="+-3" />
      </cs:and>
    </when>
  </speechDefinition>
  <speechDefinition title="FL100 pass" reactivateIn="0">
    <speech type="speech" value="Passing ten thousand feet" />
    <when>
      <cs:and>
        <cs:property name="altitude" direction="passing" expression="10000" randomize="+-10" />
      </cs:and>
    </when>
  </speechDefinition>
</copilotSet>
