<Window x:Class="Eng.Chlaot.Modules.RaaSModule.CopilotModule.CtrSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eng.Chlaot.Modules.RaaSModule.CopilotModule"
        mc:Ignorable="d"
        Title="CtrSettings" Height="296" Width="800" 
        SizeToContent="WidthAndHeight"
        Closed="Window_Closed">
  <StackPanel Margin="0,0,0,2">
    <GroupBox Header="Synthetizer" DataContext="{Binding Synthetizer}" Margin="8">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition />
          <RowDefinition />
          <RowDefinition />
          <RowDefinition />
          <RowDefinition />
        </Grid.RowDefinitions>
        <Label Content="Voice" Grid.Row="0" Grid.Column="0" />
        <ComboBox Grid.Row="0" Grid.Column="1"  Margin="2"
                  SelectedItem="{Binding Voice}" ItemsSource="{Binding AvailableVoices}" />
        <Label Content="Rate" Grid.Row="1" Grid.Column="0" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Rate}" Margin="2" />
        <Button x:Name="btnTestSynthetizer" Grid.Row="4" Grid.Column="1"  Margin="2"
                Content="Test synthetizer" Click="btnTestSynthetizer_Click" />
        <Label Content="Trim beginning (miliseconds)" Grid.Row="2" Grid.Column="0" />
        <TextBox Text="{Binding StartTrimMiliseconds}" Grid.Row="2" Grid.Column="1" Margin="2"/>
        <Label Content="Trim end (miliseconds)" Grid.Row="3" Grid.Column="0" />
        <TextBox Text="{Binding EndTrimMiliseconds}" Grid.Row="3" Grid.Column="1" Margin="2"/>
      </Grid>
    </GroupBox>
    <GroupBox Header="Files" Margin="8">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition />
          <RowDefinition />
        </Grid.RowDefinitions>
        
        <Label Content="Auto loaded Airports File" Grid.Row="0" Grid.Column="0" />
        <TextBox Text="{Binding AutoLoadedAirportsFile}" Grid.Row="0" Grid.Column="1"  Margin="0 8 0 0" />
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2">
          <Button x:Name="btnAirportsFile" Click="btnAirportsFile_Click">(Browse)</Button>
          <Button x:Name="btnAirportsFileDelete" Click="btnAirportsFileDelete_Click">(Remove)</Button>
        </StackPanel>

        <Label Content="Auto loaded RaaS File" Grid.Row="1" Grid.Column="0" />
        <TextBox Text="{Binding AutoLoadedRaasFile}" Grid.Row="1" Grid.Column="1"  Margin="0 8 0 0" />
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="2">
          <Button x:Name="btnRaasFile" Click="btnRaasFile_Click">(Browse)</Button>
          <Button x:Name="btnRaasFileDelete" Click="btnRaasFileDelete_Click">(Remove)</Button>
        </StackPanel>
      </Grid>
    </GroupBox>
  </StackPanel>
</Window>
