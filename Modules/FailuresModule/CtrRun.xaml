<UserControl x:Class="FailuresModule.CtrRun"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FailuresModule"
             xmlns:modelApp ="clr-namespace:FailuresModule.Model.App"
             xmlns:modelSim="clr-namespace:FailuresModule.Model.Sim"
             xmlns:modelRun ="clr-namespace:FailuresModule.Types.Run"
             xmlns:modelRunSus ="clr-namespace:FailuresModule.Types.Run.Sustainers"
             xmlns:modelVars="clr-namespace:Eng.Chlaot.ChlaotModuleBase.ModuleUtils.StateChecking"
             xmlns:converters="clr-namespace:FailuresModule.Converters"             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <UserControl.Resources>
    <converters:FailureDefinitionActiveToBoolConverter x:Key="FailureDefinitionActiveToBoolConverter" />
    <converters:DoubleToStringConverter x:Key="DoubleToStringConverter" />
  </UserControl.Resources>
  <DockPanel>
    <TabControl>
      <TabItem Header="Overview">
        <TreeView ItemsSource="{Binding Incidents}">
          <TreeView.Resources>
            <HierarchicalDataTemplate DataType="{x:Type modelRun:RunIncidentGroup}" ItemsSource="{Binding Incidents}">
              <StackPanel Orientation="Horizontal" Margin="2">
                <TextBlock Text="{Binding Title}" />
                <TextBlock Text=" (set)" />
              </StackPanel>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate DataType="{x:Type modelRun:RunIncidentDefinition}">
              <StackPanel Orientation="Vertical" Margin="2">
                <StackPanel Orientation="Horizontal">
                  <Label>
                    <StackPanel Orientation="Horizontal">
                      <TextBlock FontWeight="Bold" Text="{Binding IncidentDefinition.Title}" />
                      <TextBlock Text=" ==> " />
                      <TextBlock Text="Inactive" />
                    </StackPanel>
                  </Label>
                  <Button Content="Toggle state" />
                </StackPanel>
                <TreeViewItem ItemsSource="{Binding IncidentDefinition.Variables}" Foreground="Green">
                  <TreeViewItem.Header>
                    <StackPanel Orientation="Horizontal">
                      <Image Source="Icons/variable32.png" Width="16"/>
                      <TextBlock Text=" (" />
                      <TextBlock Text="{Binding IncidentDefinition.Variables.Count}" />
                      <TextBlock Text=")" />
                    </StackPanel>
                  </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem ItemsSource="{Binding IncidentDefinition.Triggers}" Foreground="Blue">
                  <TreeViewItem.Header>
                    <StackPanel Orientation="Horizontal">
                      <Image Source="Icons/trigger32.png" Width="16" />
                      <TextBlock Text=" (" />
                      <TextBlock Text="{Binding IncidentDefinition.Triggers.Count}" />
                      <TextBlock Text=")" />
                    </StackPanel>
                  </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem ItemsSource="{Binding TriggerEvaluations}" Foreground="DeepSkyBlue">
                  <TreeViewItem.Header>
                    <StackPanel Orientation="Horizontal">
                      <TextBlock Text="Triggers hits" />
                      <TextBlock Text=" (" />
                      <TextBlock Text="{Binding TriggerEvaluations.Count}" />
                      <TextBlock Text=")" />
                    </StackPanel>
                  </TreeViewItem.Header>
                </TreeViewItem>
                <TreeViewItem ItemsSource="{Binding IncidentDefinition.FailGroup.Items}" Foreground="OrangeRed">
                  <TreeViewItem.Header>
                    <StackPanel Orientation="Horizontal">
                      <Image Source="Icons/failure32.png" Width="16" />
                      <TextBlock Text=" (sel=" />
                      <TextBlock Text="{Binding IncidentDefinition.FailGroup.Selection}" />
                      <TextBlock Text=", weight=" />
                      <TextBlock Text="{Binding IncidentDefinition.FailGroup.Weight}" />
                      <TextBlock Text=")" />
                    </StackPanel>
                  </TreeViewItem.Header>
                </TreeViewItem>
              </StackPanel>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate DataType="{x:Type modelRun:RunTriggerEvaluation}">
              <StackPanel Orientation="Horizontal" Margin="2">
                <TextBlock Text="TODO" />
              </StackPanel>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate DataType="{x:Type modelVars:Variable}">
              <StackPanel Orientation="Horizontal" Margin="2">
                <TextBlock Text="{Binding Name}" />
                <TextBlock Text=" = " />
                <TextBlock Text="{Binding Value}" />
              </StackPanel>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate DataType="{x:Type modelApp:Trigger}">
              <Label Margin="0" Padding="0" Foreground="Blue">
                <StackPanel Orientation="Horizontal" >
                  <TextBlock Text="Trigger (prob=" />
                  <TextBlock Text="{Binding Probability}" />
                  <TextBlock Text=", rpt=" />
                  <TextBlock Text="{Binding Repetitive}" />
                  <TextBlock Text=", cond=" />
                  <TextBlock Text="{Binding Condition.DisplayString}" />
                  <TextBlock Text=") " />
                </StackPanel>
              </Label>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate DataType="{x:Type modelApp:FailGroup}" ItemsSource="{Binding Items}">
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="Group (sel=" />
                <TextBlock Text="{Binding Selection}" />
                <TextBlock Text=", weight=" />
                <TextBlock Text="{Binding Weight}" />
                <TextBlock Text=")" />
              </StackPanel>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate DataType="{x:Type modelApp:FailId}">
              <Label Margin="0" Padding="0" Foreground="OrangeRed">
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="Failure (id=" />
                  <TextBlock Text="{Binding Id}" />
                  <TextBlock Text=", weight=" />
                  <TextBlock Text="{Binding Weight}" />
                  <TextBlock Text=")" />
                </StackPanel>
              </Label>
            </HierarchicalDataTemplate>
          </TreeView.Resources>
        </TreeView>
      </TabItem>
      <TabItem Header="Failures (debug)">
        <ScrollViewer>
          <ListView ItemsSource="{Binding FailureDefinitions}">
            <ListView.ItemTemplate>
              <DataTemplate>
                <StackPanel Orientation="Horizontal">
                  <Label>
                    <StackPanel Orientation="Horizontal">
                      <TextBlock Text="{Binding Title}" />
                      <TextBlock Text=" (id="/>
                      <TextBlock Text="{Binding Id}"/>
                      <TextBlock Text=", state="/>
                      <TextBlock Text="{Binding Id, 
                        Converter={StaticResource FailureDefinitionActiveToBoolConverter},
                        ConverterParameter='Active|Inactive',
                        Mode=OneWay}" />
                      <TextBlock Text=")" />
                    </StackPanel>
                  </Label>
                  <Button Tag="{Binding}" x:Name="btnToggleSustainerActive" Click="btnToggleSustainerActive_Click" Content="Toggle" />
                </StackPanel>
              </DataTemplate>
            </ListView.ItemTemplate>
          </ListView>
        </ScrollViewer>
      </TabItem>
      <TabItem Header="Active failures">
        <ScrollViewer>
          <ListView ItemsSource="{Binding Sustainers}">
            <ListView.Resources>
              <HierarchicalDataTemplate DataType="{x:Type modelRunSus:EventFailureSustainer}">
                <StackPanel Orientation="Horizontal">
                  <Label>
                    <StackPanel Orientation="Horizontal">
                      <TextBlock Text="{Binding Failure.Title}" />
                      <TextBlock Text=" (event, id=" />
                      <TextBlock Text="{Binding Failure.Id}" />
                      <TextBlock Text=")" />
                    </StackPanel>
                  </Label>
                </StackPanel>
              </HierarchicalDataTemplate>
              <HierarchicalDataTemplate DataType="{x:Type modelRunSus:LeakFailureSustainer}">
                <StackPanel Orientation="Horizontal">
                  <Label>
                    <StackPanel Orientation="Horizontal">
                      <TextBlock Text="{Binding Failure.Title}" />
                      <TextBlock Text=" (leak, id=" />
                      <TextBlock Text="{Binding Failure.Id}" />
                      <TextBlock Text=", initial=" />
                      <TextBlock Text="{Binding InitialValue, Converter={StaticResource DoubleToStringConverter}, ConverterParameter='N3'}" />
                      <TextBlock Text=", current=" />
                      <TextBlock Text="{Binding CurrentValue, Converter={StaticResource DoubleToStringConverter}, ConverterParameter='N3'}" />
                      <TextBlock Text=", leak/tick=" />
                      <TextBlock Text="{Binding LeakPerTick, Converter={StaticResource DoubleToStringConverter}, ConverterParameter='N5'}" />
                      <TextBlock Text=")" />
                    </StackPanel>
                  </Label>
                </StackPanel>
              </HierarchicalDataTemplate>
              <HierarchicalDataTemplate DataType="{x:Type modelRunSus:SimVarFailureSustainer}">
                <StackPanel Orientation="Horizontal">
                  <Label>
                    <StackPanel Orientation="Horizontal">
                      <TextBlock Text="{Binding Failure.Title}" />
                      <TextBlock Text=" (simVar, id=" />
                      <TextBlock Text="{Binding Failure.Id}" />
                      <TextBlock Text=")" />
                    </StackPanel>
                  </Label>
                </StackPanel>
              </HierarchicalDataTemplate>
              <HierarchicalDataTemplate DataType="{x:Type modelRunSus:StuckFailureSustainer}">
                <StackPanel Orientation="Horizontal">
                  <Label>
                    <StackPanel Orientation="Horizontal">
                      <TextBlock Text="{Binding Failure.Title}" />
                      <TextBlock Text=" (stuck, id=" />
                      <TextBlock Text="{Binding Failure.Id}" />
                      <TextBlock Text=", stuckValue=" />
                      <TextBlock Text="{Binding StuckValue, Converter={StaticResource DoubleToStringConverter}, ConverterParameter='N5'}" />
                      <TextBlock Text=")" />
                    </StackPanel>
                  </Label>
                </StackPanel>
              </HierarchicalDataTemplate>
            </ListView.Resources>
          </ListView>
        </ScrollViewer>
      </TabItem>
    </TabControl>
  </DockPanel>
</UserControl>
