<failureDefinitions
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://tempuri.org/Schema.xsd"
        xsi:noNamespaceSchemaLocation="FailureSchema.xsd">
  <group title="Failures">
    <incident title="bird-strike" repetitive="false">
      <variables>
        <randomVariable name="vFail" minimum="60" maximum="160"/>
      </variables>
      <triggers>
        <trigger probability="0.05" repetitive="false">
          <property name="ias" direction="passing" value="{vFail}"/>
        </trigger>
      </triggers>
      <what>
        <failGroup type="oneOf">
          <failure type="eng1"/>
          <failure type="eng2"/>
          <failure type="engFire1"/>
          <failure type="engFire2"/>
        </failGroup>
      </what>
    </incident>
    <group title="Common failures">
      <group title="System failures">
        <incident title="Internal systems" repetitive="true">
          <triggers>
            <trigger probability="0.0005" repetitive="true">
              <and>
                <property name="height" direction="above" value="1"/>
                <property name="ias" direction="above" value="1"/>
              </and>
            </trigger>
          </triggers>
          <what>
            <failGroup type="oneOf">
              <failure id="vacuum"/>
              <failure id="electrical"/>
              <failure id="pitot"/>
              <failure id="static_port"/>
              <failure id="hydraulics"/>
            </failGroup>
          </what>
        </incident>
      </group>
      <incident title="Brake failures" repetitive="false">
        <triggers>
          <trigger probability="0.05" repetitive="false">
            <property name="height" direction="below" expression="500"/>
          </trigger>
        </triggers>
        <what>
          <failGroup type="one">
            <failure type="brakeAll"/>
            <failure type="brakeLeft"/>
            <failure type="brakeRight"/>
          </failGroup>
        </what>
      </incident>
      <incident title="Gear failure" repetitive="false">
        <if probability="0.03" repetitive="true">
          <or>
            <property name="speed" direction="passingUp" value="50"/>
            <property name="height" direction="passingDown" value="2500" />
          </or>
        </if>
        <what>
          <failGroup type="one">
            <failure type="gearLeft"/>
            <failure type="gearRight"/>
            <failure type="gearCenter"/>
            <failGroup type="all">
              <failure type="gearLeft"/>
              <failure type="gearRight"/>
              <failure type="gearCenter"/>
            </failGroup>
          </failGroup>
        </what>
      </incident>
      <group></group>
      </group>
    </group>
  </failureDefinitions>