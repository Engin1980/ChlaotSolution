<UserControl x:Class="Eng.Chlaot.Modules.SimVarTestModule.CtrRun"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eng.Chlaot.Modules.SimVarTestModule"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <DockPanel>
    <DockPanel DockPanel.Dock="Top" >
      <Label DockPanel.Dock="Left">SimVar name:</Label>
      <Button DockPanel.Dock="Right" x:Name="btnNewSimVar" Click="btnNewSimVar_Click" Padding="16,0,16,0">Append</Button>
      <TextBox x:Name="txtNewSimVar" />
    </DockPanel>
    <ScrollViewer>
      <ListView ItemsSource="{Binding Cases}" >
        <ListView.ItemTemplate>
          <DataTemplate>
            <StackPanel Orientation="Horizontal">
              <Label Content="{Binding SimVar}" />
              <Label Content="=" />
              <Label Content="{Binding Value}" />
            </StackPanel>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </ScrollViewer>
  </DockPanel>
</UserControl>
