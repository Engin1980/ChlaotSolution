<UserControl x:Class="AffinityModule.CtrInit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AffinityModule"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <DockPanel>
    <DockPanel DockPanel.Dock="Top" LastChildFill="False">
      <Button DockPanel.Dock="Right" x:Name="btnLoad" Content="Reload" Click="btnLoad_Click" />
      <Button DockPanel.Dock="Right" x:Name="btnSave" Content="Save" Click="btnSave_Click" />
      <Button DockPanel.Dock="Left" x:Name="btnAddRule" Content="Add rule" Click="btnAddRule_Click" />
    </DockPanel>
    <ListView x:Name="lstRules" ItemsSource="{Binding Settings.Rules}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <TextBox Text="{Binding Regex}" Width="200" />
            <TextBlock Text=" ==> " />
            
          </StackPanel>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </DockPanel>
</UserControl>
