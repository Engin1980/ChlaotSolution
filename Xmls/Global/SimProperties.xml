<?xml version="1.0"?>

<properties
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://chlaot.org/simProperties.xsd"
        xmlns:g="http://chlaot.org/global.xsd"
        xsi:noNamespaceSchemaLocation="file://./Xsds/SimPropertiesSchema.xsd"
        title="Global properties">
  <g:properties title="Plane props">
    <g:property name="alt" description="Altitude" simVar="PLANE ALTITUDE" unit="foot" />
    <g:property name="height" simVar="PLANE ALT ABOVE GROUND" unit="foot" />
    <g:property name="ias" simVar="AIRSPEED INDICATED" unit="knot" />
    <g:property name="gs" simVar="GROUND VELOCITY" unit="knot" />
    <g:property name="vs" description="Vertical speed" simVar="VERTICAL SPEED" unit="foot"/>
    <g:property name="bankAngle" simVar="PLANE BANK DEGREES" unit="degree" />
  </g:properties>
  <g:properties title="Plane lights">
    <g:property name="beaconLight" simVar="LIGHT BEACON" />
  </g:properties>
  <g:properties title="Plane Systems">
    <g:property name="engine1Running" simVar="ENG COMBUSTION:1" />
    <g:property name="engine2Running" simVar="ENG COMBUSTION:2" />
    <g:property name="engine3Running" simVar="ENG COMBUSTION:3" />
    <g:property name="engine4Running" simVar="ENG COMBUSTION:4" />
  </g:properties>
  <g:properties title="Plane attitude">
    <g:property name="parkingBrakeSet" simVar="BRAKE PARKING POSITION"/>
    <g:property name="pushbackTugConnected" simVar="PUSHBACK ATTACHED"/>
  </g:properties>
  <g:properties title="Plane orientation">
    <g:property name="accelerationBodyZ" simVar="ACCELERATION BODY Z" unit="feet per second squared" />
    <g:property name="acceleration" simVar="ACCELERATION BODY Z" unit="feet per second squared"  />
  </g:properties>

</properties>
