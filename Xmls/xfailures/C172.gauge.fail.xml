<failureDefinitions
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://chlaot.org/failures.xsd"
        xmlns:g ="http://chlaot.org/global.xsd"
        xsi:noNamespaceSchemaLocation="file://./Xsds/FailureSchema.xsd">
  <metaInfo>
    <g:label>Default failures for C172 with steam gauges</g:label>
    <g:author>Marek Vajgl</g:author>
    <g:description></g:description>
  </metaInfo>
  <group title="Failures">
    <incident title="Test" repetitive="false">
      <triggers>
        <timeTrigger interval="oncePerMinute" probability="0.5" repetitive="false"/>        
      </triggers>
      <failures selection="one">
        <failure id="eng1" />
        <failure id="eng2" />
      </failures>
    </incident>
    <incident title="Bird-strike" repetitive="false">
      <variables>
        <g:randomVariable name="vFail" minimum="30" maximum="80"/>
      </variables>
      <triggers>
        <trigger probability="0.05" repetitive="false">
          <g:property name="ias" direction="passing" expression="{vFail}"/>
        </trigger>
      </triggers>
      <failures selection="one">
        <failure id="eng1"/>
      </failures>
    </incident>
    <group title="Engine failures">
      <incident title="Engine failure" repetitive="false">
        <triggers>
          <timeTrigger interval="oncePerHour" probability="0.001" repetitive="true"/>
        </triggers>
        <failures selection="one">
          <failure id="engOilPressure1->eng1"/>
          <failure id="engOilTemperature1->eng1"/>
        </failures>
      </incident>
    </group>
    <group title="System failures">
      <incident title="Internal systems" repetitive="true">
        <triggers>
          <timeTrigger interval="oncePerTenMinutes" probability="0.005" repetitive="true"/>
        </triggers>
        <failures selection="one">
          <failure id="vacuum"/>
          <failure id="electrical"/>
          <failure id="pitot"/>
          <failure id="static_port"/>
          <failure id="hydraulics"/>
        </failures>
      </incident>
    </group>
    <group title="Panel failures">
      <incident title="Panel failure" repetitive="true">
        <triggers>
          <timeTrigger interval="oncePerTenMinutes" probability="0.005" repetitive="true"/>
        </triggers>
        <failures selection="one">
          <!--<failure id="pnlAirspeed"/> prÃ½ nefunguje na C172-gauge-->
          <failure id="pnlAltimeter"/>
          <failure id="pnlAttitude"/>
          <failure id="pnlCompass"/>
          <failure id="pnlHeading"/>
          <failure id="pnlVS"/>
        </failures>
      </incident>
    </group>
    <incident title="Brake failures" repetitive="false">
      <triggers>
        <trigger probability="0.03" repetitive="false">
          <g:property name="height" direction="passingDown" expression="100"/>
        </trigger>
      </triggers>
      <failures selection="one">
        <failure id="brakeAll"/>
        <failure id="brakeLeft"/>
        <failure id="brakeRight"/>
      </failures>
    </incident>
    <incident title="Fuel leak" repetitive="false">
      <triggers>
        <timeTrigger interval="oncePerHour" probability="0.005" repetitive="true"/>
      </triggers>
      <failures selection="one">
        <failure id="fuelLeft"/>
        <failure id="fuelRight"/>
      </failures>
    </incident>
    <incident title="Flaps stuck" repetitive="false">
      <triggers>
        <timeTrigger interval="oncePerHour" probability="0.005" repetitive="true"/>
      </triggers>
      <failures selection="one">
        <failure id="flapsLeft"/>
        <failure id="flapsRight"/>
        <failures selection="all">
          <failure id="flapsLeft"/>
          <failure id="flapsRight"/>
        </failures>
      </failures>
    </incident>
  </group>
</failureDefinitions>