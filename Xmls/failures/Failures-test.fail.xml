<failureDefinitions
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://chlaot.org/failures.xsd"
        xsi:noNamespaceSchemaLocation="file://./Xsds/FailureSchema.xsd">
  <metaInfo>
    <label>Test failure for 1engine plane</label>
    <author>Marek Vajgl</author>
    <description></description>
  </metaInfo>
  <group title="Failures">
    <incident title="Internal systems" repetitive="true">
      <variables>
        <randomVariable minimum="0" maximum="59" name="secondValue" isInteger="true" />
        <randomVariable minimum="0" maximum="9" name="minuteValue" isInteger="true" />
      </variables>
      <triggers>
        <trigger probability="1" repetitive="true">
          <and xmlns="http://chlaot.org/global.xsd">
            <property name="realTimeSecond" direction="exactly" expression="{secondValue}" randomness="+-0.5" />
            <property name="realTimeMinuteLastDigit" direction="exactly" expression="{minuteValue}" randomness="+-0" />
          </and>
        </trigger>
      </triggers>
      <failures selection="one">
        <failure id="vacuum"/>
        <failure id="electrical"/>
        <failure id="pitot"/>
        <failure id="static_port"/>
        <failure id="hydraulics"/>
      </failures>
    </incident>
  </group>
</failureDefinitions>