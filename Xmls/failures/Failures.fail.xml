<failureDefinitions
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://chlaot.org/failures.xsd"
        xsi:noNamespaceSchemaLocation="file://./Xsds/FailureSchema.xsd">
  <meta>
    <label>Default failures for 2engine plane</label>
    <author>Marek Vajgl</author>
    <description></description>
  </meta>
  <group title="Failures">
    <incident title="bird-strike" repetitive="false">
      <variables>
        <randomVariable name="vFail" minimum="60" maximum="160"/>
      </variables>
      <triggers>
        <trigger probability="0.05" repetitive="false">
          <property name="ias" direction="passing" value="{vFail}"/>
        </trigger>
      </triggers>
      <failures selection="one">
        <failure id="eng1"/>
        <failure id="eng2"/>
        <failure id="engFire1"/>
        <failure id="engFire2"/>
        <failGroup selection="all" weight="0.05">
          <failure id="eng1" />
          <failure id="eng2" />
        </failGroup>
      </failures>
    </incident>
    <group title="Common failures">
      <group title="System failures">
        <incident title="Internal systems" repetitive="true">
          <triggers>
            <trigger probability="0.0005" repetitive="true">
              <and>
                <property name="height" direction="above" value="1"/>
                <property name="ias" direction="above" value="1"/>
              </and>
            </trigger>
          </triggers>
          <failures selection="one">
            <failure id="vacuum"/>
            <failure id="electrical"/>
            <failure id="pitot"/>
            <failure id="static_port"/>
            <failure id="hydraulics"/>
          </failures>
        </incident>
      </group>
      <incident title="Brake failures" repetitive="false">
        <triggers>
          <trigger probability="0.05" repetitive="false">
            <property name="height" direction="below" value="500"/>
          </trigger>
        </triggers>
        <failures selection="one">
          <failure id="brakeAll"/>
          <failure id="brakeLeft"/>
          <failure id="brakeRight"/>
        </failures>
      </incident>
      <incident title="Gear failure" repetitive="false">
        <triggers>
          <trigger probability="0.03" repetitive="true">
            <or>
              <property name="ias" direction="passingUp" value="50"/>
              <property name="height" direction="passingDown" value="2500"/>
            </or>
          </trigger>
        </triggers>
        <failures selection="one">
          <failure id="gearLeft"/>
          <failure id="gearRight"/>
          <failure id="gearCenter"/>
          <failGroup selection="all">
            <failure id="gearLeft"/>
            <failure id="gearRight"/>
            <failure id="gearCenter"/>
          </failGroup>
        </failures>
      </incident>
    </group>
  </group>
</failureDefinitions>